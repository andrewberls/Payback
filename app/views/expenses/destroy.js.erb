$container = $(".credits-container");
$total     = $('.expense-total');

$('*[data-id="' + "<%= @expense.id %>" + '"]').remove();
$total.find('.amount').html("<%= number_to_currency(@credit_owed) %>");

if ($container.children().length === 0) {
  $container.html("<%= j render 'blank_credits' %>")
  $total.remove()
}
