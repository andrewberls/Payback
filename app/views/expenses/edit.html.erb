<% provide(:title, "Edit Expense: #{@expense.title}") %>

<div class="row">
  <div class="span-6 offset-5">

    <%= form_for(@expense, html: {class: "edit-expense-form"}) do |f| %>

      <p class="form-title-small">Editing: <strong><%= @expense.title %></strong> to <strong><%= @expense.debtor.first_name %></strong></p>

      <%= content_tag(:div, flash[:error], class: "alert alert-error") if flash[:error] %>

      <%= f.label :amount %>
      <span class="help-text">Decimal optional</span>
      <%= f.text_field :amount %>

      <%= link_to "Cancel", expenses_path, class: "btn" %>
      <%= submit_tag "Update", class: "btn btn-blue" %>

    <% end %><!-- .edit-expense-form -->

  </div>
</div>
