<% provide(:title, 'Dashboard') %>

<div class="row">
  <div class="span-16">
    <!-- <h1 class="main-title dashboard-title">Dashboard</h1> -->
    <div class="condensed-header">
      Too much?
      <%= link_to raw("Try the condensed view &raquo;"), condensed_path %>
    </div>
  </div>
</div>

<%= render 'dashboard_buttons' %>

<div class="row">

  <%#---------------------------------
      CREDITS
  ------------------------------------%>
  <div class="span-8">

    <%= content_tag(:div, flash[:success], class: "alert alert-success") if flash[:success] %>

    <h2>Owed to You</h2>

    <% if current_user.active_credits.blank? %>
      <div class="expenses-container">
        <div class="expense expense-blank">
          <p>Nobody owes you money! Click <%= link_to "here", new_expense_path %> to add a new expense.</p>
        </div>
      </div>
    <% else %>
      <%= render 'user_credits' %>
    <% end %>

  </div>


  <%#---------------------------------
      DEBTS
  ------------------------------------%>
  <div class="span-8">

    <h2>You Owe</h2>

    <% if current_user.active_debts.blank? %>
      <div class="expenses-container">
        <div class="expense expense-blank">
          <p>You don't owe anybody money! :-)</p>
        </div>
      </div>
    <% else %>
      <%= render 'user_debts' %>
    <% end %>

  </div>

</div><!-- .row -->
