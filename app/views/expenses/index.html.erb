<div class="row-fluid">
    <h1 class="main-title">Dashboard</h1>
</div>

<div class="row-fluid">
    <div class="btn-group" id="new-expense">
        <%= link_to new_expense_path, class: "btn btn-primary" do %>
            <i class="icon-plus icon-white"></i>
            Add New Expense
        <% end %>
    </div><!-- #new-expense -->
</div>

<div class="row-fluid">

    <%#----------- OWED TO YOU -----------%>
    <div class="span6">

        <h2>Owed to You</h2>
       
        <div class="expenses-container">      

            <div class="expense">
                <span class="expense-price">$60.00</span>
                <span class="expense-debtor">Matt</span>

                <div class="info-stack">
                    <span class="expense-title">Beer, hard liquor</span>
                    <span class="expense-date">7 Feb 2012</span>
                </div><!-- .info-stack -->
                <div class="btn-container">
                    <%= link_to "Delete", {action: 'destroy', id: 0 }, {
                        :method => :delete, 
                        confirm: "Are you sure you want to delete this expense?", 
                        class: "btn btn-danger pull-right",
                        id: "delete-expense"
                    } %>
                </div>
            </div><!-- .expense -->
            
        </div><!-- .expenses-container -->      
    </div>

    <%#----------- YOU OWE -----------%>
    <div class="span6">            
        <h2>You Owe</h2>

            <div class="expenses-container">

                <div class="expense">
                    <span class="expense-price">$10.00</span>
                    <span class="expense-creditor">Alex</span> 
                    
                    <div class="info-stack">
                        <span class="expense-title">CoffeeMate</span>
                        <span class="expense-date">2 Dec 2011</span>
                    </div><!-- .info-stack -->
                </div><!-- .expense -->

            </div><!-- .expenses-container -->
        
    </div>
</div><!-- .row-fluid -->