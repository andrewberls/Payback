<% debtor = expense.debtor %>

<div class="expense" data-expense-id="<%= expense.id %>">
  <span class="expense-amount">
    <%= render 'expenses/edit_mark', expense: expense %>
    <%= link_to money(expense.amount), edit_expense_path(expense) %>
  </span>

  <span class="expense-debtor">
    <%= link_to_unless_current debtor.first_name, credits_user_path(debtor),
        class: 'expense-person' %>
  </span>

  <div class="info-stack">
    <div class="expense-title <%= 'title-center' if expense.tags.blank? %>">
      <%= expense.title %>
    </div>
    <%= render 'expenses/tags', expense: expense %>
  </div><!-- .info-stack -->

  <%= render 'expenses/stale_badge', expense: expense %>

  <%= content_tag :div, mark_off_btn, class: 'expense-actions' %>

  <div class="expense-date"><%= render_date expense.created_at %></div>

</div><!-- .expense -->
