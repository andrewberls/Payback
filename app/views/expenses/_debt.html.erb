<div class="expense">
  <span class="expense-price"><%= number_to_currency(expense.amount) %></span>
  <span class="expense-creditor"><%= link_to_unless_current expense.creditor.first_name, debts_path(expense.creditor) %></span>

  <div class="info-stack">
    <span class="expense-title"><%= expense.title %></span>
    <span class="expense-date"><%= render_date expense.created_at %></span>
  </div>

  <%= render 'expenses/stale_badge', expense: expense %>
</div><!-- .expense -->
