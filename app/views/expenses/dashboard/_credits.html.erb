<% @credit_groups.each do |group| %>

  <div class="group-container">
    <%= content_tag(:h2, group.title) unless current_user.groups.count == 1 %>

    <div class="expenses-container credits-container">
      <% group.active_credits_for(current_user).each do |expense| %>
        <%= render 'credit', expense: expense %>
      <% end %>
    </div>
  </div>

<% end %>
