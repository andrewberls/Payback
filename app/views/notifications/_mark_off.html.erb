<%= form_for Notification.new, remote: true, html: { class: 'form-invisible notification-form' } do |f| %>
  <%= f.hidden_field :user_from_id, value: current_user.id %>
  <%= f.hidden_field :user_to_id,   value: expense.creditor.id %>
  <%= f.hidden_field :notif_type,   value: 'mark_off' %>
  <%= f.hidden_field :expense_id,   value: expense.id, class: 'notification_expense_id' %>

  <%= button_tag type: :submit, title: "Request for #{expense.creditor.first_name} to mark this off", data: { tipsy: true },
    class: 'btn btn-blue no-text no-text-tiny mark-off-notification' do %>
    <i class='icon-comment icon-white'></i>
  <% end %>
<% end %>
