<header>
  <div class="container">
    <h1><%= link_to "Payback", expenses_path %></h1>
    <nav>
      <ul>
        <li><%= link_to "Dashboard",   expenses_path,    id: 'dashboard-tab',   class: current_class(expenses_path) %></li>
        <li><%= link_to "New Expense", new_expense_path, id: 'new-expense-tab', class: current_class(new_expense_path) %></li>
        <li><%= link_to "Groups",      groups_path,      id: 'group-tab',       class: current_class(groups_path) %></li>
        <li>
          <%= link_to stats_path, id: 'stats-tab', class: current_class(stats_path) do %>
            <i class="icon-white icon-signal"></i>
            Stats
          <% end %>
        </li>

        <li><%= render 'notifications/notifications' %></li>
      </ul>

      <div class="user-links">
        Signed in as <%= link_to current_user.full_name, edit_user_path(current_user) %>
        <span class="separator">|</span>
        <%= link_to "Log Out", logout_path %>
      </div>
    </nav>

  </div>
</header>



