<% if @group.errors.any? %>
	<div class="alert alert-error">
		Eek! Something went wrong.
	    <ul>
		    <% @group.errors.full_messages.each do |msg| %>
		    	<% unless msg["digest"] # Hack for "digest can't be blank" %>
		      	<li><%= msg %></li>
		      <% end %>
		    <% end %>
	    </ul>
	</div>	
<% end %> 