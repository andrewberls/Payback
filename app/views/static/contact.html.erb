<% provide(:title, 'Contact') %>

<div class="row">
  <div class="span-10 offset-3">
    <div class="pretext-block">
      <h1>Thanks for using Payback.</h1>
      <p>Find a nasty bug? Have an idea for a new feature you're dying to see? We're constantly working to make Payback better and we'd love to hear from you.</p>
    </div>
  </div>

  <div class="span-6 offset-5">

    <%= form_for @message, url: contact_path do |f| %>
      <h1 class="form-title">Contact Us</h1>

      <%= flash_success %>
      <%= flash_error %>

      <%= f.label :name %>
      <span class="help-text">Optional</span>
      <%= f.text_field :name, autofocus: true %>

      <%= f.label :email %>
      <span class="help-text">Optional</span>
      <%= f.text_field :email %>

      <%= f.label :message %>
      <%= f.text_area :message %>

      <%= submit_tag "Submit", class: "btn btn-blue" %>

    <% end %>

  </div>
</div>
