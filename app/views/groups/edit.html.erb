<% provide(:title, "Edit Group: #{@group.title}") %>

<div class="row">
  <div class="span-6 offset-5">

    <%= form_for(@group, url: { action: 'update', id: @group.gid }) do |f| %>

      <h1 class="form-title">Edit Group</h1>

      <%= flash_error %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :password, "New Password" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm New Password" %>
      <%= f.password_field :password_confirmation %>

      <%= link_to "Cancel", groups_path, class: "btn" %>
      <%= submit_tag "Update", class: "btn btn-blue" %>

    <% end %>

  </div>
</div>
