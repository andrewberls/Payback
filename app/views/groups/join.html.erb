<% provide(:title, 'Join Group') %>

<div class="row">
  <div class="span-6 offset-5">

    <%= form_tag(add_groups_path, class: "join-group-form") do %>
      <h1 class="form-title">Join A Group</h1>

      <%= content_tag(:div, flash[:error], class: "alert alert-error") if flash[:error] %>

      <div class="help-block">You only need to do this once - after this, you're ready to go!</div>
      <div class="help-block">This information should have been given to you by the group creator. </div>

      <%= label_tag :gid, "Group ID" %>
      <span class="help-text">6 letters/numbers</span>
      <%= text_field_tag :gid, '', autofocus: true %>

      <%= label_tag :password %>
      <%= password_field_tag :password%>

      <%= submit_tag "Join Group", class: "btn btn-blue", id: "submit-validate" %>

    <% end %>

  </div>
</div>
