<% provide(:title, 'Groups Overview') %>

<% content_for :javascript_includes do %>
  <%= javascript_include_tag "groups" %>
<% end %>

<div class="row">
  <div class="span-10 offset-3">

    <h1>Your Groups</h1>

    <%= render "group_success_messages" %>

    <div class="groups-container">
      <% @groups.each do |group| %>
        <%= render group %>
      <% end %>
    </div>

    <div class="group-btn-container">
      <%= link_to "Create a new group", new_group_path, class: "btn btn-blue btn-large" %>
      <%= link_to "Join another group", join_groups_path, class: "btn btn-blue btn-large" %>
    </div>

  </div>
</div>
