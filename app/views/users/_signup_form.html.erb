<%= form_for @user do |f| %>
  <h1 class="form-title">Sign Up</h1>

  <% if @user.errors.any? %>
    <div class="alert alert-error">
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    </div>
  <% end %>

  <%= f.label :full_name, "Full Name" %>
  <%= f.text_field :full_name, autofocus: true  %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <div id="hint"></div>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= submit_tag "Submit", class: "btn btn-blue btn-large submit-validate" %>

<% end %>
