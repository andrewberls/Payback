<% provide(:title, "Edit Profile") %>

<div class="row">
  <div class="span-6 offset-5">

    <%= form_for(@user, url: {action: 'update'}, html: {class: "edit-user-form"}) do |f| %>

      <h1 class="form-title">Edit Your Profile</h1>

      <%= render "user_error_messages" %>      

      <%= f.label :email %>                
      <%= f.text_field :email %>

      <%= f.label :password, "New Password" %>               
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm New Password" %>
      <%= f.password_field :password_confirmation %>

      <%= link_to "Cancel", expenses_path, class: "btn" %>
      <%= submit_tag "Update profile", class: "btn btn-blue" %>

    <% end %><!-- .edit-user-form -->

  </div>
</div>