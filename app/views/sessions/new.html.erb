<% provide(:title, 'Log In') %>

<div class="row">
  <div class="span-6 offset-5">

    <%= form_tag sessions_path, class: "login-form form-validate" do %>
      <h1 class="form-title">Log In</h1>

      <%= flash_error %>

      <%= label_tag :email %>
      <%= email_field_tag :email, '', autofocus: true %>

      <%= label_tag :password %>
      <span class="help-text" style="font-weight: bold;">
        <%= link_to "(Forgot password?)", forgot_password_path %>
      </span>
      <%= password_field_tag :password %>

      <%= submit_tag "Log in", class: "btn btn-large btn-blue btn-block" %>

    <% end %>

    <span class="form-suggestion">
      Don't have an account?
      <%= link_to raw("Sign up for free &raquo;"), signup_path %>
    </span>

  </div>
</div>
