<% provide(:title, 'Log In') %>

<div class="row">
  <div class="span-6 offset-5">

    <%= form_tag(sessions_path, class: "login-form") do %>
      <h1 class="form-title">Payback</h1>
      
      <%= content_tag(:div, flash[:error], class: "alert alert-error") if flash[:error]%>            

      <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email %>      
      </div>
          
      <div class="field">
        <%= label_tag :password %>                            
        <%# link_to "Forgot password?", "#", class: "forgot-password" %>
        <%= password_field_tag :password%> 
      </div>

      <label class="checkbox">                
        <%= check_box_tag :remember_me, 1 %>
        Remember Me
      </label>

      <%= submit_tag "Log in", class: "btn btn-blue", id: "submit-login" %>
      
    <% end %><!-- .login-form -->

    <%= link_to raw("Don't have an account? Click here to get started for free"), signup_path, class: "signup" %>        

  </div>
</div>