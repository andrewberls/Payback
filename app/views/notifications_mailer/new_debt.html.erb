<%= render layout: 'shared/email' do %>

  <p>Hi <%= @recipient.first_name %>, <%= @sender.first_name %> has assigned you a debt of <%= number_to_currency(@expense.amount) %>
  for '<%= @expense.title %>' on <a href="http://www.payback.io">payback.io</a>.

  <% url = debts_user_url(@sender.id) %>
  <p>You can see the details here: <%= utm_email_link_to url, url %></p>

<% end %>
